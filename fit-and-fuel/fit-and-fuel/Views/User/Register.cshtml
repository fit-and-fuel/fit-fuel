@{
    Layout = null;
}
<link href="~/css/LoginRegister.css" rel="stylesheet">
@model RegisterUser


<div class="Main-container">
    <div class="container-login">
        <div class="wrap-login">

            <div class="login-pic">
                <img src="~/img/sign-in-bg.svg" alt="IMG">
            </div>

            <form class="login-form" asp-controller="User" asp-action="Register" method="post">
                <span class="login-form-title">SingUp To Access Many Features</span>

                <div class="wrap-input">
                    <input asp-for="Username" type="text" class="input" name="Username" placeholder="UserName" required>
                    <span asp-validation-for="Username" class="focus-input"></span>
                    <spanclass="symbol-input"></span>
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    
                </div>
                <div class="wrap-input">
                    <input asp-for="Password" type="password" class="input" name="Password" placeholder="Password" required>
                    <span asp-validation-for="Password" class="focus-input"></span>
                    <span class="symbol-input"></span>
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    
                </div>
                <div class="wrap-input">
                    <input asp-for="Email" class="input" placeholder="Email" type="text" name="Email" required>
                    <span asp-validation-for="Email" class="focus-input"></span>
                    <span class="symbol-input"></span>
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    
                </div>
                <div class="wrap-input">
                    <input class="input" placeholder="Phone Num." type="text" name="PhoneNumber" required>
                    <span class="focus-input"></span>
                    <span class="symbol-input"></span>
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    
                </div>

                <div class="wrap-input">

                    <Select id="Roles" name="Roles" class="Select">

                        <option value="Patient">Patient</option>
                        <option value="Nutritionist">Nutritionist</option>

                    </Select>
                </div>

                <div class="login-form-btn-container">
                    <button class="login-form-btn">Sign Up</button>
                </div>

                <div class="text-center p-t-1">
                    <span class="txt1">You Are A Member ?</span>
                    <a asp-controller="User" asp-action="Login" class="txt2">Login</a>
                </div>
                <div class="text-center p-t-2">
                    <a asp-controller="Home" asp-action="Index" method="post" class="txt2">Back to Home <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                </div>

            </form>
            @* <div asp-validation-summary="All"></div> *@
        </div>
    </div>
</div>


