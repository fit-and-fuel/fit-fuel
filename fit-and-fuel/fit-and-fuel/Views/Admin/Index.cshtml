	<a class="text-primary fs-13" data-bs-toggle="offcanvas" href="#offcanvasExample1" role="button" aria-controls="offcanvasExample1">+ Add Task</a>
</div>
<div class="container-fluid">
	<div class="row">
	</div>

</div>


<form asp-controller="Admin" asp-action="Role" method="post" class="needs-validation m-5" novalidate>
	<div class="mb-3 w-25">
		<label for="userName" class="form-label">User Name:</label>
		<input type="text" id="userName" name="userName" class="form-control" required>
		<div class="invalid-feedback">
			Please enter a valid user name.
		</div>
	</div>

	<button type="submit" class="btn btn-primary btn-custom-sm">Add Role</button>
</form>

<div class="row m-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Number of Nutritionists</h5>
                <p class="card-text">@Model.NumOfNutritionist</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Number of Appointments</h5>
                <p class="card-text">@Model.NumberOfAppoitment</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Number of Posts</h5>
                <p class="card-text">@Model.NumberOfPost</p>
            </div>
        </div>
    </div>
</div>

<div class="row  m-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Number of Diet Plans</h5>
                <p class="card-text">@Model.NumberOfDietPlan</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Number of Patients</h5>
                <p class="card-text">@Model.NumOfPatient</p>
            </div>
        </div>
    </div>
</div>
