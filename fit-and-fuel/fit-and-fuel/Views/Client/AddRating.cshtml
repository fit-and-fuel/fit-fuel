@{
	Layout = "~/Views/Shared/_PageLayout.cshtml";
}


<div style="background-color:#141414 ;height:80px;margin-top:-10px;width:2000px;">
</div>



<style>

	#addpostsection {
		background-image: url('https://beatdieticians.co.za/wp-content/uploads/2022/04/new-slide-4.jpg');
		background-size: cover;
		background-position: center;
		padding: 30px;
	}

</style>


<section class="elementor-section elementor-top-section elementor-element elementor-element-153008a elementor-section-content-bottom elementor-section-boxed elementor-section-height-default elementor-section-height-default" id="addpostsection" data-element_type="section">

	<div class="elementor-container elementor-column-gap-default">
		<div class="elementor-column elementor-col-50 elementor-top-column elementor-element elementor-element-ed8a95a" data-id="ed8a95a" data-element_type="column">
			<div class="elementor-widget-wrap elementor-element-populated">
				<div class="elementor-element elementor-element-ef5f742 elementor-widget elementor-widget-image" data-id="ef5f742" data-element_type="widget" data-widget_type="image.default">
					<div class="elementor-widget-container">
					</div>
				</div>
			</div>
		</div>
		<div class="elementor-column elementor-col-70 elementor-top-column elementor-element elementor-element-aac29d5" data-id="aac29d5" data-element_type="column">
			<div class="elementor-widget-wrap elementor-element-populated">
				<div class="elementor-element elementor-element-4d11961 elementor-widget elementor-widget-pt-heading" data-id="4d11961" data-element_type="widget" data-settings="{&quot;decor&quot;:[]}" data-widget_type="pt-heading.default">
					<div class="elementor-widget-container">

						<div class="pt-heading">
							<h4 class="pt-heading-title h3">
								Add Rating
							</h4>
						</div>

					</div>
				</div>
				<div class="elementor-element elementor-element-a5d8048 elementor-widget elementor-widget-pt-contact-form-7" data-id="a5d8048" data-element_type="widget" data-widget_type="pt-contact-form-7.default">
					<div class="elementor-widget-container">

						<div class="pt-contact-form-7">


							<div class="screen-reader-response"><p role="status" aria-live="polite" aria-atomic="true"></p> <ul></ul></div>
							<form asp-controller="Client" asp-action="AddRating" method="post" method="post" class="wpcf7-form init" aria-label="Contact form" novalidate="novalidate" data-status="init" >
								<div style="display: none;">
								</div>



								
								<div class="mb-3">
									<p class="wpcf7">
										<label for="Comment">Comment</label><br>
										<span class="wpcf7-form-control-wrap">
											<textarea size="40" class="wpcf7-form-control wpcf7-text wpcf7-validates-as-required" placeholder="Comment" type="text" name="Comment" style="height:auto;"></textarea>
										</span>
									</p>
								</div>
								<div class="mb-3">
									<label for="Value">Value</label>
									<Select id="Value" name="Value" class="form-control">
										<option value="1">1</option>
										<option value="2">2</option>
										<option value="3">3</option>
										<option value="4">4</option>
										<option value="5">5</option>
									</Select>
								</div>
								<div class="mb-0">
									<p class="wpcf7">
										<input class="wpcf7-form-control has-spinner wpcf7-submit" type="submit" value="Add"><span class="wpcf7-spinner"></span>
									</p>
								</div><div class="wpcf7-response-output" aria-hidden="true"></div>
							</form>
							<div asp-validation-summary="All"></div>
						</div>


					</div>
				</div>
			</div>
		</div>
	</div>
</section>



