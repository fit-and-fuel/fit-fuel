                                <th scope="col">BMI</th>
                                <th scope="col">Illnesses</th>
                            </tr>
                        </thead>
                            <tbody>
                                
                                    <tr>
                                   @* <th> @Model.healthRecord.Height</th>
                                    <td>@Model.healthRecord.Weight</td>
                                    <td>@Model.healthRecord.BMI</td>
