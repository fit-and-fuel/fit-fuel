                                    <td>160</td>
                                    <td>160</td>
                                    <td>160</td>
                                    <td>Nothing</td>
                                        
                                    </tr>
                                 
                                
                            </tbody>
                        </table>
                  
                    
                    </div>
                @if (User.IsInRole("Patient"))
                {
                    <ul class="postcard__tagbox">
                        <li class="tag__item play green">
                            <a asp-controller="chat" asp-action="index"><i class="fa-solid fa-message"></i>Send Message</a>
                        </li>
                        <li class="tag__item play green">
                            <a asp-controller="Client" asp-action="MyDietPlan"><i class="fa-solid fa-sheet-plastic"></i>View Diet Plan</a>
                        </li>

                        <li class="tag__item play green">
                            <a asp-controller="Client" asp-action="MealForToday"><i class="fa-solid fa-bowl-food"></i>Meals For Today</a>
                        </li>
                        <li class="tag__item play green">
                            <a ><i class="fa-solid fa-bowl-food"></i>My Nutritionist</a>
                        </li>
                    </ul>
                }

              
			</div>
		</article>
		
	</div>
</section>



    



