@model List<Meal>
@{
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<div class="container" style="margin-top:100px">
    <h4 class="mb-4">Meals for the Day</h4>
    <div class="table-responsive">
        <table class="table table-bordered table-responsive-sm m-4">
            <thead>
                <tr>
                    <th>Meal Name</th>
                    <th>Description</th>
                    <th>Calories</th>
                    <th>Completion</th>
                </tr>
            </thead>
            <tbody style="padding:5px 10px;margin:20px 20px 20px 20px;">
                @foreach (var meal in Model)
                {
                    <tr>
                        <td>@meal.Name</td>
                        <td>@meal.Description</td>
                        <td class="color-success">@meal.Calories</td>
                        <td>
                            <form asp-controller="Client" asp-action="Completion" asp-route-id="@meal.Id" method="post">
                                <div class="tm-sc-button btn-view-details">
                                    <button type="submit" class="badge @(meal.Completion ? "badge-success" : "badge-danger")">
                                        @(meal.Completion ? "Completed" : "Not Completed")
                                    </button>
                                </div>

                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    /* Custom styles for the table */
  
</style>
<link href="~/css/site1.css" rel="stylesheet" type="text/css" />




