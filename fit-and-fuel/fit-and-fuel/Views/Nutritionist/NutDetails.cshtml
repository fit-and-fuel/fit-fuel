@model Nutritionist

@{
	Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<link href="~/css/NutDetails.css" rel="stylesheet">

<div style="background-color:#141414 ;height:80px;margin-top:-10px;width:2000px;">
</div>

<section  class="dark">
	<div   class="container py-4 ">

        <h1 style="margin-top:70px;" class="h1 text-center" id="pageHeaderTitle">About Nutritionist</h1>

		
		<article class="postcard dark green">
			<a class="postcard__img_link" href="#">
				<img class="postcard__img" src="~/img//Nutritionist-1.jpg" alt="Image Title" />
			</a>
			<div class="postcard__text">

				<h1 class="postcard__title green"><a href="#">@Model.Name</a></h1>
				<div class="postcard__subtitle ">

                    <p>Age : @Model.Age <br />
                        <span>Phone Number : @Model.PhoneNumber</span> <br />
                        <span><a style="text-decoration:underline; color:#79dd09;" href="@Model.CvURl">Download CV</a></span></p>
                       

                   
                        
				</div>
               
				<div class="postcard__bar"></div>
				<div class="postcard__preview-txt">
                    <br />
                    <h1 class="postcard__title green"><a href="#">Available Times</a></h1>
                    <table class="table table-hover">

                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Num</th>
                                <th scope="col">Day</th>
                                <th scope="col">Time</th>
                                <th scope="col">Choose</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var rowNumber = 1;
                            }
                            @foreach (var at in Model.AvaliableTimes)
                            {
                                <tr>
                                    <th scope="row">@rowNumber</th>
                                    <td>@at.DayOfWeek</td>
                                    <td>@at.Time</td>
                                    <td>
                                        <form asp-controller="Nutritionist" asp-action="SelectAppoitment" method="post">
                                            <input name="id" value="@at.Id" type="hidden">
                                            <button  style="color:#79dd09; text-decoration:underline;" class=" btn btn-outline-success" type="submit">Select</button>
                                        </form>
                                    </td>
                                </tr>
                                rowNumber++;
                            }
                        </tbody>

                    </table>

                  </div>
			</div>
		</article>
		
	</div>
</section>

