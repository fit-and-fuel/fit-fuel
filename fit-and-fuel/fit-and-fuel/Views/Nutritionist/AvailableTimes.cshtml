<div style="width:50%;margin: 0 auto; ">
	
	<div>
		<br />
		<div class="pt-heading">
			<h2 class="pt-heading-title h2" style="font-size:40px; text-align:center;">
				Choose Your Available Time
			</h2>
		</div>
		<br />
		<form asp-controller="Nutritionist" asp-action="AddAvailableTime" method="post">
			<center>
				<div class="mb-3">
					<label for="DayOfWeek">Day Of Week</label>
					<Select id="DayOfWeek" name="DayOfWeek" class="form-control">
						<option value="Sunday">Sunday</option>
						<option value="Monday">Monday</option>
						<option value="Tuesday">Tuesday</option>
						<option value="Wednesday">Wednesday</option>
						<option value="Thursday">Thursday</option>
						<option value="Friday">Friday</option>
						<option value="Saturday">Saturday</option>

					</Select>
				</div>


				<div class="mb-3">
					<p>
						<label for="Time">Time</label><br>
						<span class="wpcf7-form-control-wrap">
							<input size="40" class="wpcf7-form-control wpcf7-text wpcf7-email wpcf7-validates-as-required wpcf7-validates-as-email" id="Time" aria-required="true" aria-invalid="false" type="time" name="Time">
						</span>
					</p>
				</div>
			</center>
			<center>
				<div class="elementor-element elementor-element-3e11bac elementor-widget elementor-widget-pt-button" data-id="3e11bac" data-element_type="widget" data-widget_type="pt-button.default">
					<div class="elementor-widget-container">

						<a class="pt-button filled-2 ">
							<input type="submit" value="Add Time">
						</a>

					</div>
				</div>
			</center>
		</form>
		<div asp-validation-summary="All"></div>
	</div>

	<br />



	<div>
		<br />
		<div class="pt-heading">
			<h2 class="pt-heading-title h2" style="font-size:40px; text-align:center;">
				 Your Times
			</h2>
		</div>
		<table class="table table-hover">

			<thead class="thead-dark">
				<tr>
					<th scope="col">Num</th>
					<th scope="col">Day</th>
					<th scope="col">Time</th>

				</tr>
			</thead>
			<tbody>
				@{
					var rowNumber = 1;
				}
				@foreach (var at in Model)
				{
					<tr>
						<th style="text-align:center;" scope="row">@rowNumber</th>
						<td>@at.DayOfWeek</td>
						<td>@at.Time</td>

					</tr>
					rowNumber++;
				}
			</tbody>

		</table>
	</div>
	
</div>

