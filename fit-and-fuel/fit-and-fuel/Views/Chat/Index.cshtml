<style>
    /* Custom CSS for Chat Card */
    .chat-card {
        background-color: #f5f5f5;
        border-radius: 10px;
    }

    /* Custom CSS for Chat Header */
    .chat-header {
        background-color: #0D99FF;
        color: #fff;
        border: none;
    }

        .chat-header h4 {
            font-size: 18px;
            margin: 0;
        }

    /* Custom CSS for Chat Settings */
    .chat-settings {
        margin-left: auto;
    }

    .chat-icon {
        fill: #0D99FF;
    }

    .chat-select select {
        background-color: #f5f5f5;
        border: none;
        border-radius: 8px;
    }

    /* Custom CSS for Chat Body */
    .chat-body {
        padding: 0;
    }

    /* Custom CSS for Chat Messages */
    .chat-box-area {
        background-color: #fff;
        border-radius: 10px;
        padding: 15px;
    }

        .chat-box-area .media {
            margin-bottom: 20px;
        }

    .message-received .text {
        background-color: #f5f5f5;
        padding: 10px;
        border-radius: 8px;
    }

    .message-sent {
        background-color: #0D99FF;
        color: #fff;
        padding: 10px;
        border-radius: 8px;
    }

    /* Custom CSS for Chat Input */
    .chat-input {
        padding: 15px;
        background-color: #fff;
        border-radius: 10px;
        margin-top: 10px;
    }

    .chat-textarea {
        border: none;
        background-color: #f5f5f5;
        border-radius: 8px;
    }

    .chat-send-btn {
        background-color: #0D99FF;
        color: #fff;
        border: none;
        border-radius: 8px;
    }

    .chat-send-icon {
        fill: #fff;
    }
</style>

