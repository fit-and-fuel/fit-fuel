@model Post

@{
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<div style="background-color:#000 ;height:80px;margin-top:-10px;width:2000px;">

</div>


<div class="container">
	<div class="row">
		<div class="col-2 col-lg-2">
		</div>
		<div class="col-12 col-lg-8">
			<article id="post-3342" class="post-3342 post type-post status-publish format-standard has-post-thumbnail hentry category-aerobics tag-gym tag-sports tag-vitamins">
				<div class="entry-content">
					<div class="entry-header">
						

						<h1 class="entry-title h3">@Model.Title</h1>
					</div>

					<div class="entry-thumb">
						<img width="1920" height="1286" src="https://promo-theme.com/woxfit/wp-content/uploads/2022/12/slider-img-2.jpg" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="" decoding="async" fetchpriority="high" srcset="https://promo-theme.com/woxfit/wp-content/uploads/2022/12/slider-img-2.jpg 1920w, https://promo-theme.com/woxfit/wp-content/uploads/2022/12/slider-img-2-1080x723.jpg 1080w, https://promo-theme.com/woxfit/wp-content/uploads/2022/12/slider-img-2-300x201.jpg 300w, https://promo-theme.com/woxfit/wp-content/uploads/2022/12/slider-img-2-1024x686.jpg 1024w, https://promo-theme.com/woxfit/wp-content/uploads/2022/12/slider-img-2-768x514.jpg 768w, https://promo-theme.com/woxfit/wp-content/uploads/2022/12/slider-img-2-1536x1029.jpg 1536w" sizes="(max-width: 1920px) 100vw, 1920px">
					</div>


					<p>@Model.Description</p>



				





					<div class="entry-meta entry-meta-bottom">
						<div class="entry-author">By John Smith</div>

						<div class="entry-date">
							24th Nov, 2022
						</div>

						
					</div>
				</div>
			</article>

			<div class="comments-area" id="comments">

				<div id="respond" class="comment-respond">
					<h3 id="reply-title" class="comment-reply-title">Add a Comment <small><a rel="nofollow" id="cancel-comment-reply-link" href="/woxfit/we-believe-that-our-best-work-creates-value-for-our-society-2/#respond" style="display:none;">Cancel reply</a></small></h3>
					<form asp-controller="Comment" asp-action="AddComment" method="post" class="wpcf7-form init" aria-label="Contact form" novalidate="novalidate" data-status="init" enctype="multipart/form-data">
						<div style="display: none;">
						</div>
						<input type="hidden" name="postId" value=@Model.Id></input>

						<div class="mb-3">
							<p class="wpcf7">
								<label for="Content">Comment</label><br>
								<span class="wpcf7-form-control-wrap">
									<textarea size="40" class="wpcf7-form-control wpcf7-text wpcf7-validates-as-required" id="Content" aria-required="true" aria-invalid="false" placeholder="Comment" type="text" name="Content" style="height:auto;"></textarea>
								</span>
							</p>
						</div>

						<div class="mb-0">
							<p class="wpcf7">
								<input class="wpcf7-form-control has-spinner wpcf7-submit" type="submit" value="Add"><span class="wpcf7-spinner"></span>
							</p>
						</div><div class="wpcf7-response-output" aria-hidden="true"></div>
					</form>
				</div><!-- #respond -->
			</div>
		</div>
		<div class="comments-list">
			<h3 class="comment-section-title">Comments</h3>
			@foreach (var comment in Model.Comments)
			{
					<p>@comment.Patient.Name</p>

				<div class="comment">
					<div class="comment-content">
						<p>@comment.content</p>
					</div>
				</div>
			}
		</div>
		<div class="col-2 col-lg-2">
		</div>
	</div>
</div>

<style>
	.comments-list {
		margin-top: 20px;
	}

	.comment {
		padding: 10px;
		border: 1px solid #ccc;
		margin-bottom: 10px;
	}

	.comment-content p {
		margin: 0;
	}

	.comment-section-title {
		font-size: 1.25em;
		margin-bottom: 10px;
	}

</style>